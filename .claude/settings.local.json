{
  "permissions": {
    "allow": [
      "Bash(python:*)",
      "Bash(pytest:*)",
      "Bash(pyright:*)",
      "Bash(.venv/bin/python:*)",
      "Bash(.venv/bin/pytest:*)",
      "Bash(.venv/bin/pytest tests/*)",
      "Bash(.venv/bin/pyright:*)",
      "Bash(uv run python:*)",
      "Bash(uv run pytest:*)",
      "Bash(uv run pyright:*)",
      "Bash(env BUBUS_LOG_LEVEL=DEBUG timeout 20 .venv/bin/python:*)",
      "Bash(env BUBUS_LOG_LEVEL=DEBUG timeout 20 .venv/bin/pytest:*)",
      "Bash(env BUBUS_LOG_LEVEL=DEBUG timeout 20 .venv/bin/pytest tests/*)",
      "Bash(do)",
      "Bash(done)",
      "Bash(for)",
      "Bash(echo:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "WebFetch(domain:github.com)",
      "Bash(timeout 60 .venv/bin/pytest:*)",
      "Bash(timeout 180 .venv/bin/pytest tests/ -v)",
      "Bash(timeout 180 .venv/bin/pytest:*)"
    ],
    "deny": []
  }
}
